    <script>
        // Función para incrementar la cantidad
        function increment(id) {
            const element = document.getElementById(id);
            let count = parseInt(element.innerText);
            element.innerText = count + 1;
        }

        // Función para decrementar la cantidad, sin bajar de 0
        function decrement(id) {
            const element = document.getElementById(id);
            let count = parseInt(element.innerText);
            if (count > 0) {
                element.innerText = count - 1;
            }
        }

        // Función para enviar el pedido por WhatsApp
        function sendOrder() {
            let message = "¡Hola! Quisiera hacer un pedido:\n\n";
            let hasOrder = false;

            const items = [
                {
                    id: 'pozole-sabado',
                    name: 'Pozole (Sábado)',
                    price: 80,
                    quantityId: 'pozole-sabado-cantidad',
                    optionId: 'pozole-sabado-opcion',
                },
                {
                    id: 'tamales-sabado',
                    name: 'Tamales (Sábado)',
                    price: 25,
                    quantityId: 'tamales-sabado-cantidad',
                    optionId: 'tamales-sabado-opcion',
                },
                {
                    id: 'pozole-domingo',
                    name: 'Pozole (Domingo)',
                    price: 80,
                    quantityId: 'pozole-domingo-cantidad',
                    optionId: 'pozole-domingo-opcion',
                },
                {
                    id: 'menudo-domingo',
                    name: 'Menudo (Domingo)',
                    price: 90,
                    quantityId: 'menudo-domingo-cantidad',
                },
                {
                    id: 'tamales-domingo',
                    name: 'Tamales (Domingo)',
                    price: 25,
                    quantityId: 'tamales-domingo-cantidad',
                    optionId: 'tamales-domingo-opcion',
                },
            ];
            
            items.forEach(item => {
                const quantityElement = document.getElementById(item.quantityId);
                if (!quantityElement) return;

                const quantity = parseInt(quantityElement.innerText);
                if (quantity > 0) {
                    hasOrder = true;
                    let line = `${quantity} ${item.name}`;
                    if (item.optionId) {
                        const option = document.getElementById(item.optionId).value;
                        line += ` (${option})`;
                    }
                    line += ` - $${quantity * item.price}\n`;
                    message += line;
                }
            });
            
            if (hasOrder) {
                const encodedMessage = encodeURIComponent(message);
                const whatsappUrl = `https://wa.me/523345852571?text=${encodedMessage}`;
                window.open(whatsappUrl, '_blank');
            } else {
                // Mensaje de error, ya que no se puede usar alert()
                document.body.innerHTML += `<div id="error-message" class="fixed inset-0 flex items-center justify-center bg-gray-900 bg-opacity-50">
                    <div class="bg-white p-6 rounded-lg shadow-xl text-center">
                        <p class="text-lg font-semibold text-gray-800">Por favor, selecciona al menos un producto para hacer tu pedido.</p>
                        <button onclick="document.getElementById('error-message').remove()" class="mt-4 bg-red-500 text-white py-2 px-4 rounded-full hover:bg-red-600 transition-colors">Entendido</button>
                    </div>
                </div>`;
            }
        }
    </script>
</body>
