        <!-- Botón de WhatsApp -->
        <div class="mt-8 text-center">
            <button onclick="sendOrder()" class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-full shadow-lg transition-transform transform hover:scale-105">
                Enviar pedido por WhatsApp
            </button>
        </div>
